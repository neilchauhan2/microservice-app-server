# Environment Configuration
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password123@mongodb:27017/microservice_db?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=microservice_db

# User Service Configuration
USER_SERVICE_PORT=8001
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# Polling Service Configuration
POLLING_SERVICE_PORT=8000

# Instructions:
# 1. Copy this file to .env in the root directory
